{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "test/*": ["../test/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist", "scripts"]
}
